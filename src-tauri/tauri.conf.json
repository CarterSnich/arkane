{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "arkane",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			},
			"window": {
				"close": true,
				"maximize": true,
				"minimize": true,
				"setTitle": true,
				"startDragging": true,
				"unmaximize": true,
				"unminimize": true
			},
			"path": {
				"all": true
			},
			"fs": {
				"all": true,
				"scope": ["$HOME/Documents/arkane/", "$HOME/Documents/arkane/*"]
			},
			"dialog": {
				"confirm": true
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "com.cartersnich.arkane",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "arkane",
				"width": 800,
				"height": 600,
				"decorations": false,
				"transparent": true
			}
		]
	}
}
